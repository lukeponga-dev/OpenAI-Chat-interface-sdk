{
  "name": "ai-chat-mobile",
  "version": "1.0.0",
  "description": "AI Chat Mobile Application",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && next export",
    "build:static": "next build && next export && npm run copy-assets",
    "cap:build": "npm run build:static && npx cap copy",
    "cap:android": "npm run cap:build && npx cap open android",
    "cap:ios": "npm run cap:build && npx cap open ios",
    "cap:sync": "npm run build:static && npx cap sync",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:run:android": "npm run cap:sync && npx cap run android",
    "cap:run:ios": "npm run cap:sync && npx cap run ios",
    "cap:build:android": "npm run cap:sync && npx cap build android",
    "cap:build:ios": "npm run cap:sync && npx cap build ios",
    "copy-assets": "mkdir -p www && cp index.html www/ && cp -r assets/* www/ 2>/dev/null || true",
    "vercel-build": "next build && next export"
  },
  "dependencies": {
    "@ai-sdk/groq": "latest",
    "@ai-sdk/react": "latest",
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "latest",
    "@capacitor/core": "latest",
    "@capacitor/haptics": "latest",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "latest",
    "@capacitor/network": "latest",
    "@capacitor/share": "latest",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "latest",
    "@radix-ui/react-select": "latest",
    "ai": "latest",
    "child_process": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fs": "latest",
    "lucide-react": "^0.460.0",
    "next": "15.2.4",
    "next-themes": "latest",
    "path": "latest",
    "react": "^19",
    "react-dom": "^19",
    "sharp": "latest",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.1.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2"
  }
}